{
  "name": "archon-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for Archon AI chat application using Playwright and Puppeteer",
  "scripts": {
    "test": "npm run test:playwright && npm run test:puppeteer",
    "test:playwright": "npx playwright test",
    "test:playwright:ui": "npx playwright test --ui",
    "test:playwright:headed": "npx playwright test --headed",
    "test:playwright:debug": "npx playwright test --debug",
    "test:puppeteer": "node puppeteer/conversation.test.js",
    "test:puppeteer:headed": "HEADLESS=false node puppeteer/conversation.test.js",
    "test:puppeteer:slow": "HEADLESS=false SLOW_MO=100 node puppeteer/conversation.test.js",
    "install:browsers": "npx playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "puppeteer": "^21.6.0"
  }
}
